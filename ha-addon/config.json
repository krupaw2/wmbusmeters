{
    "name": "Wmbusmeters krupaw",
    "version": "0.1",
    "slug": "wmbus",
    "description": "wmbus zasilany po ETH",
    "arch": ["armv7", "aarch64", "amd64"],
    "url": "https://github.com/krupaw2/wmbusmeters",
    "init" : false,
    "startup": "application",
    "boot": "auto",
    "devices": ["/dev/ttyUSB0", "/dev/ttyAMA0"],
    "usb": true,
    "ports": {
      "8118/tcp": 8118
    },
    "ports_description": {
      "8118/tcp": "wMbus-GW tcp-listen port"
    },
    "uart": true,
    "services": [
      "mqtt:need"
    ],
    "map": [
      "share:rw",
      "config:rw"
    ],
    "options": {
        "data_path": "/config/wmbusmeters",
        "enable_mqtt_discovery": false,
        "conf":
            "loglevel=normal\ndevice=auto:t1\ndonotprobe=/dev/ttyAMA0\nlogtelegrams=false\nformat=json\nlogfile=/dev/stdout\nshell=/wmbusmeters/mosquitto_pub.sh wmbusmeters/$METER_NAME \"$METER_JSON\"",
        "meters": [],
        "mqtt": {}
    },
    "schema": {
        "data_path": "str",
        "enable_mqtt_discovery": "bool?",
        "mqtt": {
          "host": "str?",
          "port": "port?",
          "user": "str?",
          "password": "str?"
        },
        "conf": "str",
        "meters": [ "str" ]
    }
}
